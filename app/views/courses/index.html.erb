<h1>Learn How to Program</h1>

<% if @courses.any? %>
  <ul>
    <% @courses.each do |course| %>
      <li><%= link_to course.name, course_path(course) %></li>
      <% end %>
  </ul>
<% else %>
  <h4>There are no courses available yet</h4>
<% end %>
<h4 class="button"><%= link_to "Add Course", new_course_path %></h4>
