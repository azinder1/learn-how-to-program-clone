<h1 class="header"><%= @course.name %></h1>


<% if @course.lessons.any? %>
    <% @course.lessons.each do |lesson| %>
      <h4 class="courses">(Week <%= lesson.week %>) <%= link_to lesson.name, course_lesson_path(lesson.course, lesson) %></h4>
    <% end %>
<% else %>
  <h4 >Write some lessons!</h4>
<% end %>

<h4 class="button button-add"><%= link_to "Add Lesson", new_course_lesson_path(@course) %></h4>
<h4 class="button" ><%= link_to "Edit Course", edit_course_path(@course) %></h4>
<h4 class="button"><%= link_to "Delete Course", course_path(@course), :data => {:confirm => "Are you sure?", :method => "delete"}%></h4>
