<h1><%= @course.name %></h1>


<h5><%= link_to "Edit Course", edit_course_path(@course) %></h5>
<h5><%= link_to "Delete Course", course_path(@course), :data => {:confirm => "Are you sure?", :method => "delete"}%></h5>
<% if @course.lessons.any? %>
  <ul>
    <% @course.lessons.each do |lesson| %>
      <li>(Week <%= lesson.week %>) <%= link_to lesson.name, course_lesson_path(lesson.course, lesson) %></li>
    <% end %>
  </ul>
<% else %>
  <h4>Write some lessons!</h4>
<% end %>
<h5><%= link_to "Add Lesson", new_course_lesson_path(@course) %></h5>
<h5><%= link_to "Home", courses_path%></h5>
